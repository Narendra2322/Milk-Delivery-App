{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Open index.html in Edge",
            "type": "msedge",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Open index.html in Chrome",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Open app (backend) in Edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Open app (backend) in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}